- url = @user.new_record? ? webappsse_users_path : webappsse_user_path
= simple_form_for(@user, url: url) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  = f.input :email
  = f.input :password, as: 'string', label: 'Insecure password'
  = f.input :password

  .actions
    = f.submit class: 'btn btn-primary'
